<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myalarm="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
        android:orientation="vertical">

        <br.edu.ifpr.webandroid.myalarm.AlarmContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myalarm:name="@string/alarm_morning"
            myalarm:label="@string/morningAlarm"
            android:id="@+id/morningAlarmContainer"
            />

        <br.edu.ifpr.webandroid.myalarm.AlarmContainer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myalarm:name="@string/alarm_evening"
            myalarm:label="@string/eveningAlarm"
            android:id="@+id/eveningAlarmContainer"
            />

    </LinearLayout>
</ScrollView>